@using EShop.Application.Extentions
@using EShop.Domain.Models
@model IEnumerable<Slider>

@{
    ViewData["Title"] = "صحفه اصلی";
}

<h1>صفحه اصلی</h1>

<p>
    <a class="btn btn-success" asp-action="Create">ایجاد</a>
</p>
<table class="table table table-bordered table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                     @item.StartDate.ToShamsi()
                </td>
                <td>
                    @item.EndDate.ToShamsi()
                </td>
                <td>
                    @item.CreateDate.ToShamsi()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDelete)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">جزِئیات</a> |
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
