@using EShop.Domain.ViewModels
@model LoginViewModel
@{
    ViewData["Title"]="ورود به سایت";
}

<section class="border-radius">
    <header><h3> ورود به سایت </h3></header>
    <article>
        <div class="col-md-10 col-sm-10 col-xs-12">

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <input asp-for="UserEmail" class="form-control" placeholder=" ایمیل ">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="رمز عبور">
                </div>
                <input type="submit" value=" ورود">
                <div asp-validation-summary="All"></div>
            </form>

        </div>
        <div class="clearfix"></div>
    </article>
</section>