@using EShop.Domain.Models
@model Product
<style>
    img {
        max-width: 100%;
    }
</style>

<section class="single-page">
    <header><h3> @Model.Title  </h3> </header>
    <article>
        <!-- Detail -->
        <div class="col-md-8 col-sm-12 col-xs-12 pull-left detail-product">
            <div>
                <span> قیمت : @Model.Price.ToString("#,0") تومان </span>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Product/AddToCart/@Model.Id" class="add-to-card-link border-radius"> افزودن به سبد خرید </a>
                }
            </div>
            <p>
                @Model.ShortDescription
            </p>
        </div>
        <!-- End Detail -->
        <!-- Gallery -->
        <div class="col-md-4 col-sm-12 col-xs-12 pull-right product-gallery">
            <div class="large-image border-radius">
                <img class="border-radius" src="/Images/@Model.ProductImages.FirstOrDefault()?.ImageName">
            </div>
            <div class="thumbnails-image">
                <div class="row">
                    @foreach (var item in Model.ProductImages)
                    {
                        <div class="col-md-3 col-sm-3 col-xs-4 border-radius"><img class="border-radius" src="/Images/@item.ImageName"></div>

                    }
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- End Gallery -->
        <div class="clearfix"></div>
    </article>
</section>


